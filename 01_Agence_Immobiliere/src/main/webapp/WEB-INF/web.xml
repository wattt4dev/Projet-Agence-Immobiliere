<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>05_a_JerseySpringIOCHibernate</display-name>

<!-- 1_Déclaration du listener pour que le conteneur web puisse charger le contexte Spring IOC -->
<!-- needed for ContextLoaderListener -->
		<!-- 1_Déclaration du listener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
		<!-- 2_Spécifier le chemin du fichier de config de SpringIOC(application-context.xml) -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/application-context.xml</param-value>
	</context-param>





</web-app>